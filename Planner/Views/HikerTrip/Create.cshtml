@model Planner.ViewModels.HikerTripViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<hr />
<div class="row">    
    <div class="col-md-12">
        <h2>Invite a hiker to "@Model.TripName"</h2>
    </div>
    <div class="col-md-4">
        
        <form asp-action="Create">
            <input type="hidden" asp-for="TripId" />
            <div class="form-group">
                <label asp-for="HikerId" class="control-label"></label>
                <input asp-for="HikerId" required type="number" class="form-control" />
                <span asp-validation-for="HikerId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
